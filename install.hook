[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = boot/%PKGBASE%/Image
Target = usr/lib/initcpio/*

[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Target = uboot-tools

[Action]
Description = Updating %PKGBASE% initramfs...
When = PostTransaction
Exec = /usr/share/libalpm/scripts/%PKGBASE%
